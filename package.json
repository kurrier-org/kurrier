{
	"name": "kurrier",
	"private": true,
	"scripts": {
		"dev:web": "dotenvx run -f .env -- pnpm --prefix apps/web dev",
		"dev:worker": "dotenvx run -f .env -- pnpm --prefix apps/worker dev",
		"dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:worker\"",
		"build": "dotenvx run -f .env -- pnpm --prefix apps/web build",
		"lint": "biome check",
		"format": "biome format --write"
	},
	"packageManager": "pnpm@8.14.0+sha1.bb42032ff80dba5f9245bc1b03470d2fa0b7fb2f",
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@dotenvx/dotenvx": "^1.49.0",
		"@types/pg": "^8.15.5",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.4",
		"tsx": "^4.20.5"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.890.0",
		"@aws-sdk/client-ses": "^3.888.0",
		"@aws-sdk/client-sesv2": "^3.888.0",
		"@aws-sdk/client-sns": "^3.890.0",
		"@aws-sdk/client-sts": "^3.890.0",
		"@sindresorhus/slugify": "^3.0.0",
		"@supabase/supabase-js": "^2.57.0",
		"drizzle-orm": "^0.44.5",
		"drizzle-zod": "^0.8.3",
		"pg": "^8.16.3",
		"postgres": "^3.4.7",
		"ulid": "^3.0.1",
		"zod": "^4.1.5"
	}
}
