{
	"name": "kurrier",
	"private": true,
	"version": "0.0.3",
	"scripts": {
		"dev:web": "dotenvx run -f .env -- pnpm --prefix apps/web dev",
		"dev:docs": "dotenvx run -f .env -- pnpm --prefix apps/docs dev",
		"dev:worker": "dotenvx run -f .env -- pnpm --prefix apps/worker dev",
		"dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:worker\" \"pnpm run dev:docs\"",
		"build": "dotenvx run -f .env -- pnpm --prefix apps/web build",
		"lint": "biome check",
		"format": "biome format --write",
		"changeset": "changeset",
		"publish-packages": "changeset publish",
		"version-packages": "changeset version && pnpm install -w --no-frozen-lockfile && git add -A"
	},
	"packageManager": "pnpm@10.0.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@dotenvx/dotenvx": "^1.50.1",
		"@types/node": "^24.5.2",
		"@types/pg": "^8.15.5",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.5",
		"tsx": "^4.20.5"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.893.0",
		"@aws-sdk/client-ses": "^3.893.0",
		"@aws-sdk/client-sesv2": "^3.893.0",
		"@aws-sdk/client-sns": "^3.893.0",
		"@aws-sdk/client-sts": "^3.893.0",
		"@sindresorhus/slugify": "^3.0.0",
		"@supabase/supabase-js": "^2.57.4",
		"bullmq": "^5.58.9",
		"drizzle-orm": "^0.44.6",
		"drizzle-zod": "^0.8.3",
		"ioredis": "^5.8.0",
		"nanoid": "^5.1.5",
		"pg": "^8.16.3",
		"postgres": "^3.4.7",
		"typesense": "^2.1.0",
		"ulid": "^3.0.1",
		"uuid": "^13.0.0",
		"validator": "^13.15.15",
		"zod": "^4.1.11"
	}
}
