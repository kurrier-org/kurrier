  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@dotenvx/dotenvx": "^1.49.0",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.5"
  }
}
