  "scripts": {
    "dev:web": "dotenvx run -f .env -- pnpm --prefix apps/web dev",
    "dev:worker": "dotenvx run -f .env -- pnpm --prefix apps/worker dev",
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:worker\"",
    "lint": "biome check",
    "format": "biome format --write"
  },
