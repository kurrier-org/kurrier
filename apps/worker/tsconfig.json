{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"paths": {
			"@worker/*": ["./*"],
			"@db": ["../../packages/db/src/index.ts"],
			"@db/*": ["../../packages/db/src/*"],
			"@schema": ["../../packages/schema/src/index.ts"],
			"@schema/*": ["../../packages/schema/src/*"]
		}
	},
	"exclude": ["node_modules"]
}
